@model Fitness_App.BL.ViewModels.WorkoutPlanViewModel

@{
    ViewData["Title"] = "Workout Plan Details";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">@Model.Title</h3>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <h5 class="mb-3">Plan Details</h5>
                    <p><strong>Coach:</strong> @Model.CoachName</p>
                    <p><strong>Created On:</strong> @Model.CreatedDate.ToString("MMMM dd, yyyy")</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <a asp-action="CoachDetails" asp-route-id="@Model.CoachId" class="btn btn-outline-secondary">
                        <i class="fas fa-user-tie me-2"></i>View Coach Profile
                    </a>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">Description</h5>
                        </div>
                        <div class="card-body">
                            @if (string.IsNullOrEmpty(Model.Description))
                            {
                                <p class="text-muted">No description available for this workout plan.</p>
                            }
                            else
                            {
                                <p style="white-space: pre-wrap;">@Model.Description</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="d-flex justify-content-between">
                <a asp-action="MyWorkoutPlans" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to My Plans
                </a>
                <a href="#" onclick="printWorkoutPlan()" class="btn btn-primary">
                    <i class="fas fa-print me-2"></i>Print Plan
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function printWorkoutPlan() {
            window.print();
        }
    </script>
} 