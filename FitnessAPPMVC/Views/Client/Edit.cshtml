@model Fitness_App.Models.ViewModels.ProgressLogViewModel

@{
    ViewData["Title"] = "Edit Progress Log";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-warning">
                    <h2 class="mb-0">Edit Progress Log</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="ProgressLogId" />
                        <input type="hidden" asp-for="UserId" />

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Date" class="control-label"></label>
                                    <input asp-for="Date" class="form-control" type="date" />
                                    <span asp-validation-for="Date" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Weight" class="control-label"></label>
                                    <div class="input-group">
                                        <input asp-for="Weight" class="form-control" />
                                        <span class="input-group-text">kg</span>
                                    </div>
                                    <span asp-validation-for="Weight" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="GoalWeight" class="control-label"></label>
                                    <div class="input-group">
                                        <input asp-for="GoalWeight" class="form-control" />
                                        <span class="input-group-text">kg</span>
                                    </div>
                                    <span asp-validation-for="GoalWeight" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ActivityLevel" class="control-label"></label>
                                    <select asp-for="ActivityLevel" class="form-select">
                                        <option value="Sedentary">Sedentary (little or no exercise)</option>
                                        <option value="Light">Light (light exercise 1-3 days/week)</option>
                                        <option value="Moderate" selected>Moderate (moderate exercise 3-5 days/week)</option>
                                        <option value="Active">Active (hard exercise 6-7 days/week)</option>
                                        <option value="Very Active">Very Active (hard daily exercise & physical job)</option>
                                    </select>
                                    <span asp-validation-for="ActivityLevel" class="text-danger"></span>
                                    <div class="form-text text-muted">
                                        This helps calculate your daily calorie needs.
                                    </div>
                                </div>
                            </div>
                        </div>

                        <h4 class="mt-4 mb-3">Body Measurements</h4>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Chest" class="control-label"></label>
                                    <div class="input-group">
                                        <input asp-for="Chest" class="form-control" />
                                        <span class="input-group-text">cm</span>
                                    </div>
                                    <span asp-validation-for="Chest" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Waist" class="control-label"></label>
                                    <div class="input-group">
                                        <input asp-for="Waist" class="form-control" />
                                        <span class="input-group-text">cm</span>
                                    </div>
                                    <span asp-validation-for="Waist" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Arms" class="control-label"></label>
                                    <div class="input-group">
                                        <input asp-for="Arms" class="form-control" />
                                        <span class="input-group-text">cm</span>
                                    </div>
                                    <span asp-validation-for="Arms" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Thighs" class="control-label"></label>
                                    <div class="input-group">
                                        <input asp-for="Thighs" class="form-control" />
                                        <span class="input-group-text">cm</span>
                                    </div>
                                    <span asp-validation-for="Thighs" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Notes" class="control-label"></label>
                            <textarea asp-for="Notes" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>

                        <div class="form-group d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save"></i> Update Log
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}