@model Fitness_App.Models.ViewModels.ProgressLogViewModel

@{
    ViewData["Title"] = "Delete Progress Log";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">Delete Progress Log</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i> Are you sure you want to delete this progress log? This action cannot be undone.
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="card mb-3">
                                <div class="card-header">
                                    <h5 class="mb-0">Weight Information</h5>
                                </div>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item d-flex justify-content-between">
                                        <strong>@Html.DisplayNameFor(model => model.Date):</strong>
                                        <span>@Model.Date.ToShortDateString()</span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between">
                                        <strong>@Html.DisplayNameFor(model => model.Weight):</strong>
                                        <span>@Model.Weight kg</span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between">
                                        <strong>@Html.DisplayNameFor(model => model.GoalWeight):</strong>
                                        <span>@Model.GoalWeight kg</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card mb-3">
                                <div class="card-header">
                                    <h5 class="mb-0">Body Measurements</h5>
                                </div>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item d-flex justify-content-between">
                                        <strong>@Html.DisplayNameFor(model => model.Chest):</strong>
                                        <span>@Model.Chest cm</span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between">
                                        <strong>@Html.DisplayNameFor(model => model.Waist):</strong>
                                        <span>@Model.Waist cm</span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between">
                                        <strong>@Html.DisplayNameFor(model => model.Arms):</strong>
                                        <span>@Model.Arms cm</span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between">
                                        <strong>@Html.DisplayNameFor(model => model.Thighs):</strong>
                                        <span>@Model.Thighs cm</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="ProgressLogId" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>