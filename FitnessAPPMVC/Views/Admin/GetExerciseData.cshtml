@model IEnumerable<Fitness_App.BL.ViewModels.ExerciseViewModel>
@{
    ViewData["Title"] = "Exercise List";
}

<h2>Exercises Management</h2>

<div class="mt-4">
    <a asp-action="AddExercises" class="btn btn-primary">Add Exercise</a>
</div>

@if (Model != null && Model.Any())
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="data:image/gif;base64,@Convert.ToBase64String(item.GIF)"
                         class="card-img-top img-fluid p-2"
                         alt="@item.Name GIF"
                         style="height: 200px; object-fit: contain; border-radius: 10px;" />

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text text-muted">
                            @(item.Description?.Length > 300 ? item.Description.Substring(0, 300) + "..." : item.Description)
                        </p>
                        <p class="text-secondary fw-bold">Type: @item.Type</p>

                        <div class="mt-auto d-flex justify-content-between">
                            <a asp-action="Update" asp-route-id="@item.ExerciseId" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.ExerciseId" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info mt-4">
        There are no exercises available.
    </div>
}










