@model Fitness_App.BL.ViewModels.CoachViewModel

@{
    ViewData["Title"] = "Edit Coach";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3>Edit Coach</h3>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-3 text-center">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl" alt="@Model.Name" class="img-thumbnail mb-2" style="width: 150px; height: 150px; object-fit: cover;" />
                            }
                            else
                            {
                                <div class="bg-secondary text-white d-flex align-items-center justify-content-center mb-2" style="width: 150px; height: 150px; border-radius: 4px;">
                                    <span class="display-4">@(string.IsNullOrEmpty(Model.Name) ? "?" : Model.Name.Substring(0, 1).ToUpper())</span>
                                </div>
                            }
                            <p class="small text-muted">Current Image</p>
                        </div>
                        <div class="col-md-9">
                            <form asp-action="EditCoach" enctype="multipart/form-data" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="Id" />
                                <input type="hidden" asp-for="ImageUrl" />

                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label">Name</label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label">Email</label>
                                    <input asp-for="Email" class="form-control" type="email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Specialization" class="form-label">Specialization</label>
                                    <input asp-for="Specialization" class="form-control" />
                                    <span asp-validation-for="Specialization" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Bio" class="form-label">Bio</label>
                                    <textarea asp-for="Bio" class="form-control" rows="4"></textarea>
                                    <span asp-validation-for="Bio" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="ImageFile" class="form-label">Update Profile Image (Optional)</label>
                                    <input asp-for="ImageFile" class="form-control" type="file" accept="image/*" />
                                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                                    <small class="form-text text-muted">Upload a new profile image to replace the current one, or leave empty to keep the existing image.</small>
                                </div>

                                <div class="d-flex justify-content-between mt-4">
                                    <a asp-action="Coaches" class="btn btn-secondary">
                                        <i class="fas fa-arrow-left"></i> Back to List
                                    </a>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-save"></i> Save Changes
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 