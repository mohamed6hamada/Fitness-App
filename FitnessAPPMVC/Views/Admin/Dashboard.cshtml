@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container py-5">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-light">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="mb-0"><i class="fas fa-tachometer-alt text-primary me-2"></i>Admin Dashboard</h2>
                        <div>
                            <a asp-controller="Admin" asp-action="UserManagement" class="btn btn-outline-primary me-2">
                                <i class="fas fa-users"></i> User Management
                            </a>
                            <a asp-controller="Admin" asp-action="ViewAllUsersProgress" class="btn btn-outline-success">
                                <i class="fas fa-chart-line"></i> All Users Progress
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-user-tie me-2"></i>Coaches Management</h4>
                </div>
                <div class="card-body">
                    <p class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>This section allows you to manage coaches in the system.
                    </p>
                    
                    <!-- Coach management functionality would go here -->
                    <div class="text-center py-5">
                        <i class="fas fa-cogs fa-4x text-muted mb-4"></i>
                        <h4 class="text-muted">Coach Management Coming Soon</h4>
                        <p>This feature is currently under development.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-utensils fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Diet Plans</h5>
                    <p class="card-text">Manage nutrition and diet plans</p>
                    <a asp-controller="Admin" asp-action="DietPlanManagement" class="btn btn-outline-success">Manage</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-dumbbell fa-3x text-danger mb-3"></i>
                    <h5 class="card-title">Exercises</h5>
                    <p class="card-text">Manage exercise programs</p>
                    <a asp-controller="Admin" asp-action="GetExerciseData" class="btn btn-outline-danger">Manage</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-blog fa-3x text-info mb-3"></i>
                    <h5 class="card-title">Blogs</h5>
                    <p class="card-text">Manage blog posts and articles</p>
                    <a asp-controller="Admin" asp-action="BlogManagement" class="btn btn-outline-info">Manage</a>
                </div>
            </div>
        </div>
    </div>
</div> 