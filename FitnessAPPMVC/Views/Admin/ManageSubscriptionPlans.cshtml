@model List<Fitness_App.BL.ViewModels.SubscriptionPlanViewModel>

<h2>Manage Subscription Plans</h2>
<a asp-action="AddSubscriptionPlan" class="btn btn-success">Add New Subscription Plan</a>

@if (Model != null && Model.Any()){
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
                <th>Duration</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var plan in Model)
        {
            <tr>
                <td>@plan.Name</td>
                <td>@plan.Price.ToString("C")</td>
                <td>@plan.Description</td>
                 <td>@plan.DurationInDays</td>
                <td>
                    <a asp-action="UpdateSubscriptionPlan" asp-route-id="@plan.PlanId" class="btn btn-primary">Update</a>
                    <a asp-action="DeleteSubscriptionPlan" asp-route-id="@plan.PlanId" class="btn btn-danger"
                       onclick="return confirm('Are you sure you want to delete this subscription plan?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


}
else{
<div class="alert alert-info mt-4">
    No subscription plans available.
</div>
}